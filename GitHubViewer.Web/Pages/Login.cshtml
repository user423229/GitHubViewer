@page
@model LoginPage
@{
    ViewData["Title"] = "Login";
}

<div>
    <h3>Login</h3>
    <p>
        @if (!ModelState.IsValid)
        {
            <div asp-validation-summary="All" class="alert alert-danger"></div>
        }
        <form method="post">
            <div class="form-group row">
                <label asp-for="GitHubUri" class="col-sm-2 col-form-label">GitHub instance URI</label>
                <div class="col-sm-5">
                    <input class="form-control" asp-for="GitHubUri" size="40" autofocus>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="GitHubAccessToken" class="col-sm-2 col-form-label">GitHub access token</label>
                <div class="col-sm-5">
                    <input class="form-control" asp-for="GitHubAccessToken" size="40" type="password">
                </div>
            </div>
            <input class="btn" type="submit" value="Login">
        </form>
    </p>
</div>
