@using Microsoft.AspNetCore.Http
<!DOCTYPE html>
<html lang="en">
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    
    <link rel="stylesheet" href="~/lib/bootstrap/bootstrap.css"/>
    <link rel="stylesheet" href="~/css/site.css"/>
    
    <title>@ViewData["Title"] - GitHub Viewer</title>
</head>
<body>

<nav class="navbar navbar-expand-sm bg-dark navbar-dark">
  <a class="navbar-brand" asp-page="Index">GitHub Viewer</a>
  
  <ul class="navbar-nav">
    <li class="nav-item">
      <a class="nav-link" asp-page="Repositories">Repositories</a>
    </li>
  </ul>
  <ul class="navbar-nav ml-auto">
      <li class="nav-item">
          @if (Context.Session.GetString(LoginMiddleware.UserKey) != null)
          {
            <a class="nav-link" asp-page="Logout">Logout</a>
          }
          else
          {
            <a class="nav-link" asp-page="Login">Login</a>
          }
      </li>
  </ul>
</nav>

<div class="container p-3">
  @RenderBody()
</div>
</body>
</html>